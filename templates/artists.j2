{% extends "head-template.j2" %}
{% block title %}Artists{% endblock %}

{% block content %}

<body onload="browseArtists()">

  <!--Browse-->
  <div id="browse" style="display: block">
  <p><strong>Browse Artists</strong></p>
  <table>
    {% if data %}
    <thead>
      <tr>
        {% for key in data[0].keys() %}
        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
        {% endfor %}
      </tr>

    <tbody>
      {% for item in data %}
        <tr>
          {% for key in item.keys() %}
          <td> {{item[key]}} </td> 
          {% endfor %}
        </tr> 
      {% endfor %} 
    {% endif %} 
  </table>   
  <input type="button" value="New Artist" onclick="newArtist()">
  </div>

  <!--Insert-->
  <div id="insert" style="display: block">
      <form method="POST">
          <legend><strong>Add Artist</strong></legend>
            <fieldset class="fields">
              <label> Artist: </label> <input type="text" name="artistName" id="artistName" required>
            </fieldset>
            <input type="submit" id="add" value="Add Artist">
            <input type="button" value="Cancel" onclick="browseArtists()">
      </form>
  </div>

  <script language="JavaScript">
    function showform(dowhat) {
      if (dowhat == 'insert'){
        document.getElementById('browse').style.display = 'none';
        document.getElementById('insert').style.display = 'block';
      }
      else {
        document.getElementById('browse').style.display = 'block';
        document.getElementById('insert').style.display = 'none';
      }
    }
      function newArtist() { showform('insert'); }
      function browseArtists() { showform ('browse'); }
  </script>
</body>
{% endblock %}


